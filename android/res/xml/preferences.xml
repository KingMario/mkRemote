				<CheckBoxPreference android:key="@string/c_buttonbar1_enter_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/enter">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_maximize_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/maximize">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_show_virtual_keyboard_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/show_virtual_keyboard">
				</CheckBoxPreference>
			</PreferenceCategory>
		</PreferenceScreen>

		<PreferenceScreen android:title="@string/buttonbar2_settings_title"
			android:summary="@string/buttonbar2_settings_summary">
			<PreferenceCategory android:title="@string/button_bar_category">
				<CheckBoxPreference android:key="@string/c_buttonbar2_on"
					android:title="@string/buttonbar2_on_title" android:summary="@string/buttonbar2_on_summary">
				</CheckBoxPreference>
			</PreferenceCategory>
			<PreferenceCategory android:title="@string/active_buttons_category">
				<CheckBoxPreference android:key="@string/c_buttonbar2_lefthold_on"
