					android:dependency="@string/c_buttonbar1_on" android:title="@string/right_button_hold">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_esc_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/esc">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_f5_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/f5">
				</CheckBoxPreference>
