		</CheckBoxPreference>
		<ListPreference android:key="@string/c_trackball_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/trackball_key_title">
		</ListPreference>
	</PreferenceCategory>
	<PreferenceCategory android:summary="@string/dpad_settings_category"
		android:title="@string/dpad_settings_category" android:key="@string/dpad_settings_category">
		<CheckBoxPreference android:key="@string/c_dpad_mouse_on"
			android:title="@string/dpad_mouse_on_title" android:summary="@string/dpad_mouse_on_summary">
		</CheckBoxPreference>
		<ListPreference android:key="@string/c_dpad_center_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/dpad_center_key_title">
		</ListPreference>
		<ListPreference android:key="@string/c_dpad_up_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
