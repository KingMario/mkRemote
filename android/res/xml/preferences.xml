		<ListPreference android:key="@string/c_dpad_down_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/dpad_down_key_title">
		</ListPreference>
		<ListPreference android:key="@string/c_dpad_left_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/dpad_left_key_title">
		</ListPreference>
		<ListPreference android:key="@string/c_dpad_right_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/dpad_right_key_title">
		</ListPreference>
	</PreferenceCategory>
