		<CheckBoxPreference android:key="@string/c_boxee_mode_on"
			android:title="@string/boxee_mode" android:summary="@string/boxee_mode_summary">
		</CheckBoxPreference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/button_bar_category">
		<PreferenceScreen android:title="@string/buttonbar1_settings_title"
			android:summary="@string/buttonbar1_settings_summary">
			<PreferenceCategory android:title="@string/button_bar_category">
				<CheckBoxPreference android:key="@string/c_buttonbar1_on"
					android:title="@string/buttonbar1_on_title" android:summary="@string/buttonbar1_on_summary">
				</CheckBoxPreference>
			</PreferenceCategory>
			<PreferenceCategory android:title="@string/active_buttons_category">
				<CheckBoxPreference android:key="@string/c_buttonbar1_lefthold_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/left_button_hold">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_left_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/left_button">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar1_middlehold_on"
					android:dependency="@string/c_buttonbar1_on" android:title="@string/middle_button_hold">
