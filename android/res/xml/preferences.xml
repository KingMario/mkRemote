				<CheckBoxPreference android:key="@string/c_buttonbar2_show_virtual_keyboard_on"
					android:dependency="@string/c_buttonbar2_on" android:title="@string/show_virtual_keyboard">
				</CheckBoxPreference>
			</PreferenceCategory>
		</PreferenceScreen>
	</PreferenceCategory>
