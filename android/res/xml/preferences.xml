<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	android:key="@string/c_preference_screen_key" android:orderingFromXml="true">
	<PreferenceCategory android:title="@string/bluetooth_library">
		<Preference android:key="@string/c_bluetooth_details"
			android:selectable="false">
		</Preference>
		<CheckBoxPreference android:key="@string/c_bluetooth_on"
			android:title="@string/bluetooth_on_title" android:summary="@string/bluetooth_on_summary">
		</CheckBoxPreference>
	</PreferenceCategory>
	<PreferenceCategory android:summary="@string/general_settings_category"
		android:title="@string/general_settings_category">
		<CheckBoxPreference android:key="@string/c_auto_connect_on"
			android:title="@string/auto_connect_title" android:summary="@string/auto_connect_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_wake_lock_on"
			android:title="@string/prevent_sleep_title" android:summary="@string/prevent_sleep_summary">
		</CheckBoxPreference>
		<ListPreference android:key="@string/c_mouse_sensitivity"
			android:title="@string/mouse_sensitivity_title" android:entryValues="@array/mouse_sensitivity_values"
			android:entries="@array/mouse_sensitivity_titles">
		</ListPreference>
		<ListPreference android:key="@string/c_default_orientation"
			android:title="@string/default_orientation" android:entries="@array/default_orientation_titles"
			android:entryValues="@array/default_orientation_values">
		</ListPreference>
		<CheckBoxPreference android:key="@string/c_wallpaper_on"
			android:title="@string/wallpaper_on_title" android:summary="@string/wallpaper_on_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_notification_bar_on"
			android:title="@string/notification_bar_on_title" android:summary="@string/notification_bar_on_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_lock_on"
			android:title="@string/lock_on_title" android:summary="@string/lock_on_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_click_vibrate_on"
			android:title="@string/vibrate_on_click_title" android:summary="@string/vibrate_on_click_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_touchscreen_on"
			android:title="@string/touchscreen_on_title" android:summary="@string/touchscreen_on_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_touch_click_on"
			android:dependency="@string/c_touchscreen_on" android:title="@string/touch_click_on_title"
			android:summary="@string/touch_click_on_summary">
		</CheckBoxPreference>
		<CheckBoxPreference android:key="@string/c_long_press_scroll_on"
			android:title="@string/long_press_scroll_on_title" android:summary="@string/long_press_scroll_on_summary">
		</CheckBoxPreference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/trackball_settings_category"
		android:key="@string/trackball_settings_category">
		<CheckBoxPreference android:key="@string/c_trackball_on"
			android:title="@string/trackball_on_title" android:summary="@string/trackball_on_summary">
		</CheckBoxPreference>
