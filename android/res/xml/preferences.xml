				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar2_pageup_on"
					android:dependency="@string/c_buttonbar2_on" android:title="@string/pageup">
				</CheckBoxPreference>
				<CheckBoxPreference android:key="@string/c_buttonbar2_pagedown_on"
					android:dependency="@string/c_buttonbar2_on" android:title="@string/pagedown">
