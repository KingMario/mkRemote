			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
			android:title="@string/call_key_title">
		</ListPreference>
		<ListPreference android:key="@string/c_back_key"
			android:entryValues="@array/key_mapping_values" android:entries="@array/key_mapping_titles"
